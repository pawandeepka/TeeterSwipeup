<?xml version="1.0" encoding="utf-8"?>

<resources>
    <declare-styleable name="CardStackView">
        <attr name="visibleCount" format="integer"/>
        <attr name="swipeThreshold" format="float"/>
        <attr name="translationDiff" format="float"/>
        <attr name="scaleDiff" format="float"/>
        <attr name="stackFrom" format="enum">
            <enum name="bottom" value="0"/>
            <enum name="top" value="1"/>
        </attr>
        <attr name="elevationEnabled" format="boolean"/>
        <attr name="swipeEnabled" format="boolean"/>
        <attr name="swipeDirection" format="enum">
            <enum name="freedom" value="0"/>
            <enum name="freedom_no_bottom" value="1"/>
            <enum name="horizontal" value="2"/>
            <enum name="vertical" value="3"/>
        </attr>
        <attr name="leftOverlay" format="reference"/>
        <attr name="rightOverlay" format="reference"/>
        <attr name="bottomOverlay" format="reference"/>
        <attr name="topOverlay" format="reference"/>
    </declare-styleable>

    <declare-styleable name="SwipeFlingAdapterView">
        <attr name="SwipeFlingStyle" format="reference"/>
        <attr name="rotation_degrees" format="float"/>
        <attr name="min_adapter_stack" format="integer"/>
        <attr name="max_visible" format="integer"/>
    </declare-styleable>


    <declare-styleable name="SwipeDeck">
        <attr name="max_visible_" format="integer"/>
        <attr name="rotation_degrees_" format="float"/>
        <attr name="card_spacing_" format="dimension"/>
        <attr name="render_above_" format="boolean"/>
        <attr name="render_below_" format="boolean"/>
        <attr name="opacity_end_" format="float"/>
        <attr name="card_gravity_" format="enum">
            <enum name="top" value="0"/>
            <enum name="center" value="1"/>
            <enum name="bottom" value="2"/>
        </attr>
    </declare-styleable>
</resources>